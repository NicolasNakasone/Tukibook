{
  "name": "tukibook",
  "version": "1.0.0",
  "private": true,
  "description": "Una red social, tuki üëç",
  "workspaces": [
    "client",
    "server",
    "tukibook-helper"
  ],
  "scripts": {
    "client": "npm --prefix client run dev",
    "server": "npm --prefix server run dev",
    "install": "npm install --workspaces --ignore-scripts",
    "type-check": "npm run type-check --workspaces",
    "build": "npm run build --workspace tukibook-helper && npm run build --workspace server && npm run build --workspace client",
    "build:client": "npm run build --workspace tukibook-helper && npm run build --workspace client",
    "build:server": "npm run build --workspace tukibook-helper && npm run build --workspace server",
    "start:server": "npm run start --workspace server"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.2",
    "@types/cookie-parser": "1.4.8",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jsonwebtoken": "9.0.6",
    "@types/mongoose": "5.11.97",
    "@types/morgan": "1.9.9",
    "@types/multer": "1.4.12",
    "@types/node": "20.14.4",
    "@types/nodemailer": "6.4.15",
    "@types/socket.io": "3.0.2"
  }
}
