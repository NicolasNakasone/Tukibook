{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "lib": ["ESNext"],
    "outDir": "./dist",
    "rootDir": "src",
    "module": "ESNext",
    "target": "ESNext"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
