{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["ESNext"],
    "module": "CommonJS",
    "target": "es6",
    "outDir": "./dist",
    "paths": {
      "@tukibook-helper/*": ["./src/*"]
    }
  },
  "include": ["."],
  "exclude": ["node_modules"]
}
