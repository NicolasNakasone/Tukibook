{
  "compilerOptions": {
    "composite": true, // <-- necesario si lo vas a usar en monorepo con build compartido
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "lib": ["ESNext"],
    "module": "CommonJS",
    "target": "ES6",
    "outDir": "./dist"
  },
  "include": ["."],
  "exclude": ["node_modules"]
}
